{% extends 'base.html.twig' %}

{% block body %}

<div class="container-fluid col-10">

        <div class="row text-center pt-3 pb-3">
        <h1>Les voitures que nous avons</h1>
    </div>
    
    <div class="row text-center">
{% for voitures in marque.voitures %}
{% set url = path("voiture_show",{'slug':voitures.slug}) %}

    <div class="col-md-3 text-black">
        <div class="card bg-light mb-3">
            <div class="card-header text-center bg-primary text-white">


                <h3>{{voitures.Marque.nom}}</h3>



            </div>
            <img src="../images/cover/{{voitures.cover}}" class="mx-auto d-block" width="100%" height="200"
                alt="Image de la voiture" class="starsimg">
            <div class="card-body">
                <div class="card-title text-center">
                    modele : <h4>{{voitures.modele}}</h4>
                </div>
                <p class="card-text">
                    <p>KM :{{voitures.km}}</p>
                    <p>Puissance : {{voitures.puissance}}</p>
                    <p>Année : {{voitures.anneeCircul | date('d/m/Y')}}</p>
                    <p>Prix : {{voitures.prix}} €</p>
                </p>
                <div class="text-center">
                    <a href="{{url}}" class="btn btn-primary">Découvrire la voiture</a>
                </div>
            </div>
        </div>
    </div>


    {% endfor %}
</div>
</div>




    {% endblock %}